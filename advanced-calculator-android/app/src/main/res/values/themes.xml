<resources>
    <!-- تم اصلی متریال -->
    <style name="Theme.ProCalc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- استایل دکمه‌ها با parent صحیحِ متریال -->
    <style name="ProCalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">2dp</item>

        <!-- گوشه‌های گرد به روش استاندارد متریال -->
        <item name="shapeAppearanceOverlay">@style/Shape.Rounded16</item>
    </style>

    <!-- اورلی شکل -->
    <style name="Shape.Rounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
